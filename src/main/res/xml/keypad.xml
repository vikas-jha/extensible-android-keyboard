<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="25%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="@dimen/key_height_numeric" symbol="keypad" boardType="Numeric" >

    <Row>
        <Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left" />
        <Key android:codes="50" android:keyLabel="2" android:popupCharacters="ABC" />
        <Key android:codes="51" android:keyLabel="3" android:popupCharacters="DEF" />
        <Key android:codes="45" android:keyLabel="-" android:keyEdgeFlags="right" />
    </Row>
    <Row>
        <Key android:codes="52" android:keyLabel="4" android:popupCharacters="GHI" android:keyEdgeFlags="left"/>
        <Key android:codes="53" android:keyLabel="5" android:popupCharacters="JKL" />
        <Key android:codes="54" android:keyLabel="6" android:popupCharacters="MNO" />
        <Key android:codes="32" android:keyLabel="&#x23B5;" android:keyEdgeFlags="right" />
    </Row>
    <Row>
        <Key android:codes="55" android:keyLabel="7" android:popupCharacters="PQRS" android:keyEdgeFlags="left"/>
        <Key android:codes="56" android:keyLabel="8" android:popupCharacters="TUV" />
        <Key android:codes="57" android:keyLabel="9" android:popupCharacters="WXYZ" />
        <Key android:codes="-5" android:keyLabel="&#9003;" android:isRepeatable="true"
             android:keyEdgeFlags="right"/>
    </Row>
    
    <Row android:rowEdgeFlags="bottom">
        
        <Key android:codes="42" android:keyLabel="*" android:keyEdgeFlags="left"/>
        <Key android:codes="48" android:keyLabel="0" android:popupCharacters="+" />
        <Key android:codes="35" android:keyLabel="#" />
        <Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return" 
                android:keyEdgeFlags="right"/>
    </Row>
</Keyboard>
    